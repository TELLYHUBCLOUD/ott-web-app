{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
